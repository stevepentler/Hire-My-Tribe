<%= render partial: "specialties/specialty_buttons" %>

<div class="center">
  <h1 class="mint-shadow"><%= current_developer.name %> <%= current_developer.last_name %></h1>

  <div class="card-image">
    <img src="https://media.licdn.com/mpr/mpr/shrinknp_200_200/AAEAAQAAAAAAAAZvAAAAJDFiY2JjNTc4LTQ0NDktNDcyYy05YzMxLTcyZmVmZDU3OTU5OA.jpg" id=current_developer-image">
  </div>

  <h3><%= current_developer.specialty.name %></h3>
  <h3>Rate $<%= current_developer.rate %>/hr</h3>
  <h3>Email <%= current_developer.email %></h3>
  <h3>Bio: <%= current_developer.bio %> </h3>

  <span class="card-totem">
    <%= image_tag("database/horse_animal_totem.png") if (current_developer.specialty.name == "Database")%>
    <%= image_tag("front_end/hawk_animal_totem.png") if (current_developer.specialty.name == "Front End")%>
    <%= image_tag("back_end/fox_animal_totem.png") if (current_developer.specialty.name == "Back End")%>
  </span>

  <%= link_to "Edit Account Information", edit_developer_path %>

</div>
