<!DOCTYPE html>
<html>
<head>
  <title>HireMyTribe</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <!-- Fonts -->
  <link href='https://fonts.googleapis.com/css?family=Amatic+SC:700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Cantarell' rel='stylesheet' type='text/css'>
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
</head>
<body>
  <div class='amatic-font'>
  <%= render partial: "navbars/navbar" unless @disable_navbar %>
  <%= render partial: "navbars/root_navbar" if @disable_navbar %>

  <div class="right-align" style='margin-right: 15px;'> <%= link_to "Logged in: Contractor " + current_contractor.first_name, contractor_path(current_contractor) if current_contractor %></div>
  <div class="right-align"> <%#= "Logged in: Developer " + current_developer.name if current_developer %> </div>

  <div class="center">
    <% flash.each do |type, msg| %>
      <h3><%= msg %></h3>
    <% end %>
  </div>

    <%= yield %>
  </div>

</body>
</html>
