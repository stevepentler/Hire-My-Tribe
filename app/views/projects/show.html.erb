<h1><%= @project.title %></h1>
<p><%= @project.description %></p>
<p>Total: $<%= @project.total %></p>
<p><%= @project.status %></p>
<p>Created At: <%= @project.created_at.to_formatted_s(:long)  %></p>
<p>Updated At: <%= @project.updated_at.to_formatted_s(:long) %></p>


<% @project.developers.each do |developer| %>
  <div class="col l8 s12 m6">
    <div class="card-small tribe-row">
      <span class="card-image left">
        <img src="https://robohash.org/<%= developer.id %>">
      </span>
      <span class="card-content right" id="developer_<%=developer.name%>">
        <h3><%= developer.name %></h3>
        <h3>Specialty: <%= developer.specialty.name %></h3>
        <h3>Rate: <%= developer.rate %>$/h</h3>
        <%= link_to "#{developer.name} Bio", developer_path(developer) %>
        <%= link_to "Remove #{developer.name} from project", contractor_project_remove_dev_path(@project, dev: developer.id), method: :delete %>
      </span>
      <br>
    </div>
  </div>
<% end %>
<% if @project.status == "Pending" %> 
  <%= link_to "Submit Payment", contractor_project_payment_path(@project) %>
<% end %> 
