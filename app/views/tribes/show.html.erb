<div class="container">
  <%= form_for([current_contractor, @project], url: contractor_projects_path) do |f| %>
    <%= f.label :title, "Project Title", class: "form-label" %>
    <%= f.text_field :title, id: "form-value" %>

    <%= f.label :description, "Project Description", class: "form-label" %>
    <%= f.text_field :description, id: "form-value" %>

    <%= render "/tribes/project"  %>

    <%= f.submit "Start Project", class: "row waves-effect waves-light btn-large", id: "signup-button" %> <%= "Total: #{current_pending_tribe.total}" %>
  <%end%>
</div>
