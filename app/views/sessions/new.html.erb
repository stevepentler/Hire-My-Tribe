<%= render partial: "/small_totems_row" %>
<div class="background-fox">
  <br>
  <div class="center">
    <h3 class="row waves-effect waves-light btn-large" id="signup-button" ><%= link_to "Sign Up", sign_up_path unless current_user? %></h3>
  </div>

  <div class="row">
    <div class="col s1">
      <br>
    </div>
    <span id='contractor-login-form' class='col s4'>
      <h3 class="mint-shadow">Contractor Login</h3>
      <%= form_for(:session, url: login_path) do |f| %>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email, id: "form-value"%>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, id: "form-value" %>
        <br>
        <%= f.submit "Contractor Login", class: "form-label left-button", id: "form-button" %>
      <% end %>
    </span>

    <div class="col s2">
      <br>
    </div>

    <span id='developer-login-form' class='col s4'>
      <h3 class="mint-shadow">Developer Login</h3>

      <%= form_for(:session, url: login_path) do |f| %>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email, id: "form-value" %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, id: "form-value" %>
        <br>
        <%= f.submit "Developer Login", class: "form-label right-button", id: "form-button" %>
      <% end %>
    </span>
    <div class="col s1">
      <br>
    </div>
  </div>
</div>