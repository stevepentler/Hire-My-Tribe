<span id='edit-contractor-form'>
    <%= form_for(current_contractor, url: contractor_path) do |f| %>

    <%= f.label :company_name, "Company Name" %>
    <%= f.text_field :company_name, value: current_contractor.company_name %>
    <br>

    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name, value: current_contractor.first_name %>
    <br>

    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name, value: current_contractor.last_name %>
    <br>

    <%= f.label :email %>
    <%= f.text_field :email, value: current_contractor.email %>
    <br>

    <%= f.label :bio %>
    <%= f.text_field :bio, value: current_contractor.bio %>
    <br>

    <%= f.submit "Update Account" %>

  <% end %>
</span>
